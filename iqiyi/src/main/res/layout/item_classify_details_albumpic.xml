<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/albumpic_width"
    android:layout_height="@dimen/albumpic_parent_height">

    <ImageView
        android:id="@+id/albumpic_iv"
        android:layout_width="@dimen/albumpic_width"
        android:layout_height="@dimen/albumpic_height"
        android:scaleType="fitXY"
        android:background="@drawable/albumpic_shape" />

    <TextView
        android:id="@+id/albumpic_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textColor="@color/color_channel_info_album_name_text"
        android:layout_alignParentBottom="true"
        android:maxLines="1"
        android:maxEms="8"
        android:ellipsize="end"
        android:textSize="@dimen/title_text_size" />

    <ImageView
        android:id="@+id/albumpic_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_30px"
        android:visibility="visible" />
</RelativeLayout>