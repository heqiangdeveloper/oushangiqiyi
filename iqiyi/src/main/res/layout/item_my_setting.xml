<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/my_setting_item_width"
    android:layout_height="@dimen/my_setting_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/corners_bg"
    android:orientation="horizontal"
    app:cmd_scope="@string/scope_my_setting_item">

    <TextView
        android:id="@+id/my_setting_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/margin_23dp"
        android:textColor="@color/color_setting_item_text"
        android:textSize="@dimen/title_text_size"
        android:clickable="true"
        app:speakable="true"/>

    <TextView
        android:id="@+id/my_setting_item_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/my_setting_item_more"
        android:layout_marginEnd="@dimen/margin_60dp"
        android:textColor="@color/color_my_setting_item_tips"
        android:textSize="@dimen/tag_text_size"
        android:visibility="visible"/>


    <ImageView
        android:id="@+id/my_setting_item_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/margin_23dp"
        android:background="@drawable/my_setting_more" />


</RelativeLayout>