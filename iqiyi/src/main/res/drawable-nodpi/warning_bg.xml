<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="0px" android:height="90px" >
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:type="linear"
                android:startColor="#00ff6c00"
                android:centerColor="#33ff6c00"
                android:endColor="#66ff6c00"/>
        </shape>
    </item>

    <item android:left="0px" android:width="90px" android:gravity="left">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:type="linear"
                android:startColor="#00ff6c00"
                android:centerColor="#33ff6c00"
                android:endColor="#66ff6c00"/>
        </shape>
    </item>

    <item android:right="0px" android:width="90px" android:gravity="right">
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:type="linear"
                android:startColor="#00ff6c00"
                android:centerColor="#33ff6c00"
                android:endColor="#66ff6c00"/>
        </shape>
    </item>

    <item android:bottom="0px" android:height="90px" android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:type="linear"
                android:startColor="#00ff6c00"
                android:centerColor="#33ff6c00"
                android:endColor="#66ff6c00"/>
        </shape>
    </item>

</layer-list>