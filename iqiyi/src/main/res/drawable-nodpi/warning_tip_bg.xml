<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/driving_reminder_shape"/>

    <item android:top="0px" android:height="20px" >
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:type="linear"
                android:startColor="#00ff6c00"
                android:centerColor="#59ff6c00"
                android:endColor="#b3ff6c00"/>
            <corners android:radius="20px"/>
        </shape>
    </item>

    <item android:left="0px" android:width="20px" android:gravity="left">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:type="linear"
                android:startColor="#00ff6c00"
                android:centerColor="#59ff6c00"
                android:endColor="#b3ff6c00"/>
            <corners android:radius="20px"/>
        </shape>
    </item>

    <item android:right="0px" android:width="20px" android:gravity="right">
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:type="linear"
                android:startColor="#00ff6c00"
                android:centerColor="#59ff6c00"
                android:endColor="#b3ff6c00"/>
            <corners android:radius="20px"/>
        </shape>
    </item>

    <item android:bottom="0px" android:height="20px" android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:type="linear"
                android:startColor="#00ff6c00"
                android:centerColor="#59ff6c00"
                android:endColor="#b3ff6c00"/>
            <corners android:radius="20px"/>
        </shape>
    </item>



</layer-list>